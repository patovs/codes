#!/bin/bash

echo "Ingrese el log a escanear como parámetro al ejecutar el script "
echo "Ejemplo: ./php-cleaner ruta_al_archivo/nombre_de_archivo"
echo ""
echo "(Debe ingresar la ruta completa del archivo)"

read -p "Presione [Enter] para continuar o Crtl+C para salir"

FILE=$1

for line in `cat $FILE`
do
	CARS=$(echo $line | awk -F: '{ print $1 }')
	NUMBER_LINE=$(echo $line | awk -F: '{ print $2 }')
	TARGET=$(echo $line | awk -F: '{ print $3 }')

	sed -i '$(echo $CARS)d' $TARGET

done
